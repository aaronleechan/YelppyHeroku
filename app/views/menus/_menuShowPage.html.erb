		
		<tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td>
                  <h5><%= menu.name %></h5>
                </td>
                <td>

                  <% if menu.figure_url present? %>
                  <%= image_tag(menu.figure_url, :size=>"500x300") %>
                  <%end%>

                  <%= menu.name %>
                  <br/>
                  <%= menu.ingredient %>
                  <%= menu.price %>
                  <%= menu.value %>
                  <%= menu.footrating %>
                  
                </td>
              </tr>
            <%end%>
          </tbody>




            create_table "menus", force: :cascade do |t|
    t.string  "name"
    t.text    "ingredient"
    t.string  "price"
    t.integer "value"
    t.integer "footrating"
    t.integer "cookingTime"
    t.integer "resturant_id"
    t.integer "user_id"
    t.string  "figure"
    t.index ["resturant_id"], name: "index_menus_on_resturant_id"
    t.index ["user_id"], name: "index_menus_on_user_id"
  end