
<center>
  <div class="center jumbotron">
    <div class="container">

      <h1 style="color:#F8F8F8"> Find a restaurant </h1>


        <div id="locationfinder" class="col-lg-8 col-lg-offset-2">
          <center>
          <div class="search-form">
            <%= form_tag search_resturants_path, method: :get do |f| %>
                <%= text_field_tag :search,nil, placeholder: "pizza, bugers, etc" %>
                &nbsp&nbsp&nbsp
                <%= text_field_tag :location,nil, placeholder: "San Jose, San Francisco, etc" %>
                <br \><br \>
                <%= select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}) %>
                <br \><br \>
                <%= submit_tag 'Search', class: "btn span2 btn-realto-form btn-large" %>
            <% end %>
          </div><!-- /input-group -->
          </center>
        </div><!-- /.col-lg-6 -->
    </div>
  </div>
</center>